@using WebDulsa.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="wrap-input100 validate-input m-b-26" data-validate="nombre usuario es requerido">
                    @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "input100", placeholder= "Enter username" name = "username" })*@
                    <span class="label-input100">Username</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", placeholder = "Escriba nombre usuario", name = "username" })
                    @*<input class="input100" type="text" name="username" placeholder="Enter username">*@
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="contraseña es requerida">
                    <span class="label-input100">Password</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Escriba la contraseña", name = "pass" })
                    @*<input class="input100" type="password" name="pass" placeholder="Enter password">*@
                    <span class="focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-30">
                    <div class="contact100-form-checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "input-checkbox100" })
                        @*< input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">*@
                        <label class="label-checkbox100" for="ckb1">
                            Recordar
                        </label>
                    </div>

                    <div>
                         @Html.ActionLink("Registrar como nuevo usuario", "Register",null, new {@class = "txt1" })
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Entrar
                    </button>
                </div>
                @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
            }
 
