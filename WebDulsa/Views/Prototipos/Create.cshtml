            <div class="col-md-1">
            </div>
            @Html.LabelFor(model => model.Version, "Versión", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Version, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0"  } })
                @Html.ValidationMessageFor(model => model.Version, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
            </div>
            @Html.LabelFor(model => model.MetrosCuadrado, "M2", htmlAttributes: new { @class = "control-label col-md-1 text-right" })
