@model Modelo.CambioLote

@{
    ViewBag.Title = "Captura Modificaciones";
}
<br />
@*<h2>Create</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h4>Pago</h4>
        <hr />*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="invoice p-3 mb-3">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-10">
                <div class="form-group row align-items-end">
                    @Html.LabelFor(model => model.PagoId, "Lote:", htmlAttributes: new { @class = "control-label col-md-1 text-right" })
                    <div class="col-md-3">
                        @Html.DropDownList("PagoId", null, "-- Seleccione --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PagoId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1"></div>
                    @Html.LabelFor(model => model.Fecha, "Fecha:", htmlAttributes: new { @class = "col-md-1 col-form-label text-right" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Fecha, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <table class="table table-striped">

            <tr class="text-center">
                <th colspan="3">DATOS GENERALES DEL CLIENTE</th>
            </tr>

            <tr>
                <td><span id="nombre"></span></td>
                @*<td>Doe</td>
                <td>john@example.com</td>*@
            </tr>
            <tr>
                @*<td>Mary</td>
                <td>Moe</td>
                <td>mary@example.com</td>*@
            </tr>
            <tr>
                @*<td>July</td>
                <td>Dooley</td>
                <td>july@example.com</td>*@
            </tr>
        </table>
    
    </div>

   

    <div class="invoice p-3 mb-3" id="contenedor-paquetes">
        <div class="col-md-1">
        </div>
        <div class="form-group row align-items-end">
            <div class="col-md-1">
            </div>
            <div class="col-4"></div>
            <div class="col-2">mt2</div>
            <div class="col-2">Pieza</div>
            <div class="col-2">Precio</div>
        </div>
    </div>




    <div class="form-group">
        <div class="ml-auto col-md-3">
            <input type="submit" value="Guardar" class="btn btn-primary" /> &nbsp;
            @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
}
@Scripts.Render("~/modificacion-pagos/js")

